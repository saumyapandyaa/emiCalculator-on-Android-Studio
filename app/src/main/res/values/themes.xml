        <item name="colorPrimary">#FF6F61</item>
        <item name="colorPrimaryDark">@color/purple_200</item>
        <item name="colorAccent">#FFFFFF</item>
    </style>
    <style name="FancyButtonStyle">
        <item name="android:layout_width">match_parent</item>
